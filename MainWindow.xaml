<pu:WindowX x:Class="FMLauncher.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:pu="https://opensource.panuon.com/wpf-ui"
            Title="FMLauncher"
            Icon="Source/favicon.ico"
            IsEscEnabled="True"
            CanClose="True"
            DisableDragMove="False"
            AllowsTransparency="False"
            WindowStyle="None"
            
            
            pu:WindowXCaption.Height="25"
            pu:WindowXCaption.BorderThickness="0,0,0,0"
            pu:WindowXCaption.HeaderAlignment="Left"
            pu:WindowXCaption.Buttons="MinimizeClose"
            
            
            Height="500" Width="820" ResizeMode="CanMinimize"
            
            
            Closing="Window_Closing"
            >
    <!-- 透明背景 -->
    <pu:WindowX.Effect>
        <pu:AeroWindowXEffect Background="#44FFFFFF"/>
    </pu:WindowX.Effect>
    
    <!-- 动画 -->
    <pu:WindowX.Resources>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </pu:WindowX.Resources>
    <Grid>
        
        <!-- 顶部导航栏 -->
<!-- 顶部导航栏 -->
<DockPanel Height="40" VerticalAlignment="Top" 
           Background="#00000000" 
           Margin="0,10,0,0">
    
    <!-- 时间显示区域停靠到右边 -->
    <StackPanel DockPanel.Dock="Right" Height="30" Width="200" Margin="10,0,10,0"
                VerticalAlignment="Center">
        <Border Background="#66FFFFFF" 
                CornerRadius="8" 
                Padding="8,4" 
                BorderBrush="#66FFFFFF" 
                BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="CurrentDateTextBlock" 
                           Text="日期" 
                           FontSize="12"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock Text=" | " 
                           FontSize="12"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0"/>
                <TextBlock x:Name="CurrentTimeTextBlock" 
                           Text="时间" 
                           FontSize="12"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </StackPanel>

    <!-- 按钮区域居中 -->
    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Button x:Name="HomeButton" Content="主页" Click="NavigateToHome" 
                Height="30" Width="100" Margin="5"
                pu:ButtonHelper.CornerRadius="15,15,15,15"
                pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                pu:ButtonHelper.ClickBackground="#66FFFFFF"
                pu:ButtonHelper.HoverBackground="#808080"
                pu:ButtonHelper.HoverForeground="White"
                pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
        <Button x:Name="GameSettingButton" Content="游戏设置" Click="NavigateToGameSetting" 
                Height="30" Width="100" Margin="5"
                pu:ButtonHelper.CornerRadius="15,15,15,15"
                pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                pu:ButtonHelper.ClickBackground="#66FFFFFF"
                pu:ButtonHelper.HoverBackground="#808080"
                pu:ButtonHelper.HoverForeground="White"
                pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
        <Button x:Name="GameDownLoadButton" Content="游戏下载" Click="GameDownLoadButton_OnClick" 
                Height="30" Width="100" Margin="5"
                pu:ButtonHelper.CornerRadius="15,15,15,15"
                pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                pu:ButtonHelper.ClickBackground="#66FFFFFF"
                pu:ButtonHelper.HoverBackground="#808080"
                pu:ButtonHelper.HoverForeground="White"
                pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
        <Button x:Name="AboutButton" Content="关于" Click="NavigateToAbout" 
                Height="30" Width="100" Margin="5"
                pu:ButtonHelper.CornerRadius="15,15,15,15"
                pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                pu:ButtonHelper.ClickBackground="#66FFFFFF"
                pu:ButtonHelper.HoverBackground="#808080"
                pu:ButtonHelper.HoverForeground="White"
                pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
    </StackPanel>
</DockPanel>


        
        <!-- 页面内容区域 -->
        <Frame x:Name="MainFrame" 
               Margin="0,50,0,0" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</pu:WindowX>
