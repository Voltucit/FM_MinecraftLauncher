<pu:WindowX x:Class="忘却的旋律_EP.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:pu="https://opensource.panuon.com/wpf-ui"
            Title="FMCLauncher"
            Icon="Source/favicon.ico"
            IsEscEnabled="True"
            AllowsTransparency="True"
            Background="#99FFFFFF"
            WindowStyle="None"
            Closing="Window_Closing"
            pu:WindowXCaption.Height="35"
            pu:WindowXCaption.Background="#44000000"
            pu:WindowXCaption.Foreground="#FF000000"
            pu:WindowXCaption.BorderBrush="#44FFFFFF"
            pu:WindowXCaption.BorderThickness="0,0,0,1"
            Height="500" Width="820" ResizeMode="NoResize">
    <pu:WindowX.Effect>
        <pu:AeroWindowXEffect Background="#66FFFFFF"/>
    </pu:WindowX.Effect>
    <pu:WindowX.Resources>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </pu:WindowX.Resources>
    <Grid>
        <!-- 顶部导航栏 -->
        <StackPanel Height="40" VerticalAlignment="Top" 
                    Orientation="Horizontal" 
                    Background="#00000000" 
                    Margin="0,10,0,0">
            <Button x:Name="HomeButton" Content="主页" Click="NavigateToHome" 
                    Height="30" Width="100" Margin="5"
                    pu:ButtonHelper.CornerRadius="15,15,15,15"
                    pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                    pu:ButtonHelper.ClickEffect="Shake"
                    pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                    pu:ButtonHelper.ClickBackground="#66FFFFFF"
                    pu:ButtonHelper.HoverBackground="#66FFFFFF"
                    pu:ButtonHelper.HoverForeground="#66FFFFFF"
                    pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                    pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
            <Button x:Name="GameSettingButton" Content="游戏设置" Click="NavigateToGameSetting" 
                    Height="30" Width="100" Margin="5"
                    pu:ButtonHelper.CornerRadius="15,15,15,15"
                    pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                    pu:ButtonHelper.ClickEffect="Shake"
                    pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                    pu:ButtonHelper.ClickBackground="#66FFFFFF"
                    pu:ButtonHelper.HoverBackground="#66FFFFFF"
                    pu:ButtonHelper.HoverForeground="#66FFFFFF"
                    pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                    pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
            <Button x:Name="AboutButton" Content="关于" Click="NavigateToAbout" 
                    Height="30" Width="100" Margin="5"
                    pu:ButtonHelper.CornerRadius="15,15,15,15"
                    pu:ButtonHelper.HoverCornerRadius="15,15,15,15"
                    pu:ButtonHelper.ClickEffect="Shake"
                    pu:ButtonHelper.ClickBorderBrush="#a1a3a6"
                    pu:ButtonHelper.ClickBackground="#66FFFFFF"
                    pu:ButtonHelper.HoverBackground="#66FFFFFF"
                    pu:ButtonHelper.HoverForeground="#66FFFFFF"
                    pu:ButtonHelper.HoverBorderBrush="#a1a3a6"
                    pu:ButtonHelper.ShadowColor="#44FFFFFF"/>
        </StackPanel>
        
        <!-- 页面内容区域 -->
        <Frame x:Name="MainFrame" 
               Margin="0,50,0,0" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</pu:WindowX>
