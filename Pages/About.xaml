<Page x:Class="忘却的旋律_EP.Pages.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:pu="https://opensource.panuon.com/wpf-ui"
      mc:Ignorable="d"
      Title="About" Height="450" Width="800">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 标题区域 -->
                <Border Background="#66FFFFFF" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="FMLauncher 启动器" 
                                   FontSize="26" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>
                        <Separator Background="#EEEEEE" Margin="0,0,0,10" Width="200"/>
                        <TextBlock x:Name="VersionTextBlock" 
                                   Text="版本: V1.5.0" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,3"/>
                    </StackPanel>

                </Border>

                <!-- 项目信息 -->
                <Border Background="#66FFFFFF" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="项目介绍" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="FMLauncher 是一个基于 .NET 技术开发的 Minecraft 启动器，旨在为用户提供简洁、高效的游戏启动体验。" 
                                   FontSize="14" 
                                   Foreground="#555555"
                                   TextWrapping="Wrap"
                                   LineHeight="24"/>
                    </StackPanel>
                </Border>

                <!-- 功能特性 -->
                <Border Background="#66FFFFFF" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="功能特性" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,15"/>
                        <StackPanel Margin="10,0,0,0">
                            <BulletDecorator Margin="0,0,0,10">
                                <TextBlock Text="支持多种 Minecraft 版本启动" 
                                           FontSize="14" 
                                           Foreground="#555555"/>
                            </BulletDecorator>
                            <BulletDecorator Margin="0,0,0,10">
                                <TextBlock Text="正版账户与离线模式双重登录支持" 
                                           FontSize="14" 
                                           Foreground="#555555"/>
                            </BulletDecorator>
                            <BulletDecorator Margin="0,0,0,10">
                                <TextBlock Text="自动内存优化设置" 
                                           FontSize="14" 
                                           Foreground="#555555"/>
                            </BulletDecorator>
                            <BulletDecorator Margin="0,0,0,10">
                                <TextBlock Text="友好的用户界面设计" 
                                           FontSize="14" 
                                           Foreground="#555555"/>
                            </BulletDecorator>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 开发信息 -->
                <Border Background="#66FFFFFF" 
                        CornerRadius="10" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="开发信息" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,15"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="开发者: Voltucit" 
                                       FontSize="14" 
                                       Foreground="#555555"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="启动核心: StarLight Core " 
                                       FontSize="14" 
                                       Foreground="#555555"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="界面框架: Panuon WPF UI" 
                                       FontSize="14" 
                                       Foreground="#555555"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="© 2025 Voltucit. 保留所有权利." 
                                       FontSize="12" 
                                       Foreground="#888888"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

